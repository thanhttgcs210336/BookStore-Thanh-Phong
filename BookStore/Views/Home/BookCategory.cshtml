@{
    ViewData["Title"] = "BookCategory";
}
@model List<BookStore.Models.Book>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.19.0/font/bootstrap-icons.css">
<style>
    .tshirt_img img {
        height: 300px;
        width: auto;
    }
</style>

<div class="container mt-3">
    <h1 class="text-center mb-4">Book Category</h1>
    <div class="fashion_section">
        <div id="main_slider" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="container">
                        <div class="fashion_section_2">
                            <div class="row">
                                @if (Model != null)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <div class="col-lg-4 col-md-6 col-sm-12">
                                            <div class="box_main">
                                                <h4 class="shirt_text">@item.BookName</h4>
                                                <p class="price_text">Price <span style="color: #262626;">$@item.Price</span></p>
                                                <div class="tshirt_img">
                                                    <img src="~/images/@item.Image" class="img-fluid" alt="@item.BookName">
                                                </div>
                                                <div class="btn_main">
                                                    <div class="buy_bt"><a href="#">Buy Now</a></div>
                                                    <div class="seemore_bt">
                                                        <a asp-controller="Home" asp-action="Bookdetail" asp-route-BookId="@item.BookId">See More</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-3 mb-3 text-center">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
